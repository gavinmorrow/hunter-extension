{
  "manifest_version": 3,
  "name": "extension-test",
  "version": "0.1.0",

  "host_permissions": [
    "https://hunterschools.myschoolapp.com/*",
    "https://accounts.google.com/o/oauth2/*",
    "https://accounts.google.com/v3/signin/challenge/pwd?*",
    "https://accounts.google.com/signin/oauth/*"
  ],

  "permissions": ["storage"],

  "background": {
    "scripts": ["state.background.js"],
    "service_worker": "service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://hunterschools.myschoolapp.com/lms-assignment/*"],
      "js": ["browser-polyfill.min.js", "common.js", "assignment-center.js"]
    },
    {
      "matches": [
        "https://hunterschools.myschoolapp.com/app*",
        "https://accounts.google.com/o/oauth2/*",
        "https://accounts.google.com/v3/signin/challenge/pwd?*",
        "https://accounts.google.com/signin/oauth/*"
      ],
      "js": ["browser-polyfill.min.js", "common.js", "login-automatically.js"]
    }
  ]
}
